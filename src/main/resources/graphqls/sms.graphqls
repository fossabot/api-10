extend type Query {
    # 查看所有短信
    getSmsList: [Sms]
    getSmsTplList: [String]
}

extend type Mutation {
    # 发送短信
    sendSms(otpCode: Int!, sms: SmsInput!): Sms!
}

# 短信
type Sms {
    id: String!
    # 手机号
    mobile: String!
    # 内容
    content: String!
    # 结果
    result: String
    createTime: Date!
}

input SmsInput {
    # 手机号
    mobile: String!
    # 内容
    content: String!
}